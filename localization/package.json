{
    "name": "@tonlabs/localization",
    "version": "3.0.1",
    "description": "Localization utilities for Tonlabs's UIKit",
    "scripts": {
        "tsc": "tsc --noEmit",
        "prepare": "bob build && cp -R src/languages/en.json lib/typescript/src/languages/"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tonlabs/UIKit.git",
        "directory": "localization"
    },
    "keywords": [
        "tonlabs",
        "design-system",
        "react-native"
    ],
    "author": "tonlabs.io",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/tonlabs/UIKit/issues"
    },
    "homepage": "https://github.com/tonlabs/UIKit/localization#readme",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "react-native": "src/index.ts",
    "types": "lib/typescript/src/index.d.ts",
    "files": [
        "lib/",
        "src/"
    ],
    "dependencies": {
        "bignumber.js": "9.0.0",
        "dayjs": "1.9.1"
    },
    "devDependencies": {
        "@react-native-clipboard/clipboard": "^1.8.5",
        "react-native": "0.67.4",
        "react-native-builder-bob": "^0.18.2",
        "react-native-localization": "2.1.6",
        "typescript": "4.4.3"
    },
    "peerDependencies": {
        "@react-native-clipboard/clipboard": "^1.8.5",
        "react-native": "^0.67.4",
        "react-native-localization": "^2.1.6"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            [
                "commonjs",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "module",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
