        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-native": "^0.65.0",
        "react-native-android-keyboard-adjust": "^1.2.0",
        "react-native-reanimated": "^2.3.0-alpha.3",
        "react-native-safe-area-context": "^3.1.3"
