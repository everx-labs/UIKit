{
    "name": "@tonlabs/uikit.flask",
    "version": "2.3.0",
    "description": "Flask package is a set of user stories built upon the components from uikit.hydrogen",
    "scripts": {
        "tsc": "tsc --noEmit --composite false",
        "prepare": "bob build"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tonlabs/UIKit.git",
        "directory": "packages/flask"
    },
    "keywords": [
        "tonlabs",
        "design-system",
        "react-native"
    ],
    "author": "tonlabs.io",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/tonlabs/UIKit/issues"
    },
    "homepage": "https://github.com/tonlabs/UIKit/packages/flask#readme",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "react-native": "src/index.ts",
    "types": "lib/typescript/src/index.d.ts",
    "files": [
        "lib/",
        "src/"
    ],
    "dependencies": {
        "@tonlabs/uikit.assets": "^2.3.0",
        "@tonlabs/uikit.core": "^2.3.0",
        "@tonlabs/uikit.hydrogen": "^2.3.0",
        "@tonlabs/uikit.localization": "^2.3.0",
        "@tonlabs/uikit.navigation": "^2.3.0",
        "@tonlabs/uikit.navigation_legacy": "^2.3.0",
        "html2canvas": "^1.0.0-rc.7",
        "qrcode": "^1.4.4",
        "fuse.js": "^3.4.6"
    },
    "devDependencies": {
        "@react-native-community/bob": "0.16.2",
        "@tonlabs/babel-plugin-transform-inline-consts": "*",
        "@types/react": "17.0.16",
        "@types/react-native": "0.64.12",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-native": "0.64.2",
        "react-native-gesture-handler": "^1.10.3",
        "react-native-reanimated": "git+ssh://git@github.com/tonlabs/react-native-reanimated-surf.git",
        "react-native-svg": "^12.1.1",
        "react-native-view-shot": "^3.1.2",
        "@types/qrcode": "^1.4.0",
        "dayjs": "1.9.1"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-native": "^0.64.2",
        "react-native-gesture-handler": "^1.10.3",
        "react-native-reanimated": "^2.2.1",
        "react-native-svg": "^12.1.1",
        "react-native-view-shot": "^3.1.2"
    },
    "@react-native-community/bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            [
                "commonjs",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "module",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
