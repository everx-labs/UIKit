{
    "name": "@tonlabs/uikit.themes",
    "version": "3.0.0",
    "description": "Themes for Tonlabs's UIKit",
    "scripts": {
        "tsc": "tsc --noEmit",
        "prepare": "bob build"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tonlabs/UIKit.git",
        "directory": "kit/themes"
    },
    "keywords": [
        "tonlabs",
        "design-system",
        "react-native"
    ],
    "author": "tonlabs.io",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/tonlabs/UIKit/issues"
    },
    "homepage": "https://github.com/tonlabs/UIKit/kit/themes#readme",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "react-native": "src/index.ts",
    "types": "lib/typescript/src/index.d.ts",
    "files": [
        "lib/",
        "src/",
        "fonts.gradle"
    ],
    "dependencies": {
        "@tonlabs/localization": "^3.0.0"
    },
    "devDependencies": {
        "@react-native-community/bob": "0.16.2",
        "@testing-library/jest-native": "4.0.1",
        "@testing-library/react-native": "7.2.0",
        "@types/react": "17.0.21",
        "@types/react-native": "0.65.0",
        "fontfaceobserver-es": "^3.3.3",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-native": "0.65.1",
        "react-native-animateable-text": "0.7.0",
        "react-native-reanimated": "2.3.1",
        "ts-jest": "26.5.6",
        "typescript": "4.4.3"
    },
    "peerDependencies": {
        "fontfaceobserver-es": "^3.3.3",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-native": "0.65.1",
        "react-native-animateable-text": "^0.7.0",
        "react-native-reanimated": "^2.3.0"
    },
    "@react-native-community/bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            [
                "commonjs",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "module",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
