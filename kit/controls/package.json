{
    "name": "@tonlabs/uikit.controls",
    "version": "3.1.1",
    "description": "Controls for Tonlabs's UIKit",
    "scripts": {
        "tsc": "tsc --noEmit",
        "prepare": "bob build"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tonlabs/UIKit.git",
        "directory": "kit/controls"
    },
    "keywords": [
        "tonlabs",
        "design-system",
        "react-native"
    ],
    "author": "tonlabs.io",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/tonlabs/UIKit/issues"
    },
    "homepage": "https://github.com/tonlabs/UIKit/kit/controls#readme",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "react-native": "src/index.ts",
    "types": "lib/typescript/src/index.d.ts",
    "files": [
        "lib/",
        "src/"
    ],
    "dependencies": {
        "@tonlabs/localization": "^3.0.2",
        "@tonlabs/uikit.assets": "^3.0.2",
        "@tonlabs/uikit.core": "^4.0.1",
        "@tonlabs/uikit.layout": "^3.1.1",
        "@tonlabs/uikit.media": "^3.1.1",
        "@tonlabs/uikit.themes": "^3.1.1"
    },
    "devDependencies": {
        "@types/react": "17.0.44",
        "@types/react-native": "0.67.5",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-native": "0.67.5",
        "react-native-builder-bob": "^0.18.2",
        "react-native-gesture-handler": "^2.4.2",
        "react-native-reanimated": "2.10.0",
        "react-native-redash": "^16.0.11",
        "react-native-svg": "^12.3.0",
        "typescript": "4.4.3"
    },
    "peerDependencies": {
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-native": "0.67.5",
        "react-native-gesture-handler": "^2.4.2",
        "react-native-reanimated": "^2.10.0",
        "react-native-redash": "^16.0.11",
        "react-native-svg": "^12.3.0"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            [
                "commonjs",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "module",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
