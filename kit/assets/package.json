{
    "name": "@tonlabs/uikit.assets",
    "version": "3.0.1",
    "description": "Assets on Tonlabs's UIKit",
    "scripts": {
        "tsc": "tsc --noEmit --composite false",
        "prepare": "bob build"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tonlabs/UIKit.git",
        "directory": "kit/assets"
    },
    "keywords": [
        "tonlabs",
        "design-system",
        "react-native"
    ],
    "author": "tonlabs.io",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/tonlabs/UIKit/issues"
    },
    "homepage": "https://github.com/tonlabs/UIKit/kit/assets#readme",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "react-native": "src/index.ts",
    "types": "lib/typescript/src/index.d.ts",
    "files": [
        "lib/",
        "src/"
    ],
    "devDependencies": {
        "react-native-builder-bob": "^0.18.2",
        "typescript": "4.4.3"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            [
                "commonjs",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "module",
                {
                    "configFile": "./babel.config.js"
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
